<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitializationActivity">



    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/c"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_black"
        android:scaleType="centerCrop"
        android:alpha="0.6"/>



    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNamBoy"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="13sp"
            android:textColor="@color/a4"
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:background="@drawable/styleeditext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/nameboy"/>

        <EditText
            android:id="@+id/edtNameGirl"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textSize="13sp"
            android:textColor="@color/a4"
            android:textColorHint="@color/white"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/styleeditext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/namegirl"/>
        <Button
            android:id="@+id/btnDateLove"
            android:textSize="13sp"
            android:textColor="@color/a4"
            android:textColorHint="@color/white"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/styleeditext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/datelove"/>

        <Button
            android:onClick="Create"
             android:layout_margin="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/stylebutton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAllCaps="false"
            android:text="Táº¡o"/>

    </LinearLayout>

    <TextView
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/design"/>

</RelativeLayout>