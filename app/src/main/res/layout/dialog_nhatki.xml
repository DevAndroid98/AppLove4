<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sự kiện"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:textColor="@color/pink"/>

    <EditText
        android:inputType="date"

        android:imeOptions="actionNext"
        android:id="@+id/ngaykiniem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        android:hint="Ngày kỉ niệm(Ex:28/9/2018)"/>


    <EditText
        android:imeOptions="actionDone"
        android:inputType="text"
        android:id="@+id/textkiniem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/pink"
        android:hint="Những điều đáng nhớ"/>

    <Button
        android:id="@+id/addImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh"
        android:textAllCaps="false"
        android:textColor="@color/pink"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textStyle="bold"
            android:id="@+id/luu"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/style1"
            android:layout_gravity="center"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/huybo"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/style1"
            android:layout_gravity="center"
            android:text="Hủy bỏ"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESIGN BY DevAndroid"/>


</LinearLayout>